@model IEnumerable<pet_store.Models.Animal>
@{
    ViewData["Title"] = "pet store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @foreach (var item in Model)
    {
        <div class="card">
            <a asp-controller="Animal" asp-action="AnimalById" asp-route-id="@item.AnimalID"><h4>@item.Name</h4></a><br />
            <img src="@item.ImageSource" width="100" height="100" /><br />
            <a asp-controller="Animal" asp-action="AnimalById" asp-route-id="@item.AnimalID">Click here to see more</a>

        </div>
    }
</div>
