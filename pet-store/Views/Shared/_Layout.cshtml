<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/css/StyleSheet.css" rel="stylesheet" />*@
    <style>
        .container {
            padding: 0.5rem;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card {
            margin-left: 2%;
            margin-right: 2%;
            width: 40%;
            background-color: #eee;
        }

        img {
            margin-left: auto;
            margin-right: auto;
        }

    </style>
</head>
<body>
    <header style="padding-right:0.5rem;padding-left:0.5rem;">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Enter as admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalog" asp-action="Index">Show Catalog</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div style="width:80%;align-self:center;align-items:center;margin:auto;text-align:center;align-content:center;">
        @RenderBody()
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
